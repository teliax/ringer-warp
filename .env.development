# WARP Platform Environment Configuration
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the appropriate values

# =====================================================
# ENVIRONMENT
# =====================================================
NODE_ENV=development
DEBUG=false
LOG_LEVEL=info

# =====================================================
# GCP CONFIGURATION
# =====================================================
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# =====================================================
# AUTHENTICATION (Google Identity Platform)
# =====================================================
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

# JWT Configuration
JWT_ISSUER=https://securetoken.google.com/${FIREBASE_PROJECT_ID}
JWT_AUDIENCE=${FIREBASE_PROJECT_ID}
JWT_ALGORITHM=RS256

# =====================================================
# EXTERNAL INTEGRATIONS
# =====================================================

# Sinch (SMS/Voice Provider)
SINCH_APP_KEY=
SINCH_APP_SECRET=
SINCH_SERVICE_PLAN_ID=
SINCH_API_URL=https://sms.api.sinch.com
SMPP_HOST=smpp.sinch.com
SMPP_PORT=2775
SMPP_SYSTEM_ID=
SMPP_PASSWORD=
SMPP_SYSTEM_TYPE=

# Telique (Telecom Data)
TELIQUE_API_KEY=
TELIQUE_API_URL=https://api.telique.com/v1
TELIQUE_ACCOUNT_ID=
TELIQUE_ENABLE_LRN=true
TELIQUE_ENABLE_CNAM=true
TELIQUE_ENABLE_LERG=true

# NetSuite (Billing/ERP)
NETSUITE_ACCOUNT_ID=
NETSUITE_CONSUMER_KEY=
NETSUITE_CONSUMER_SECRET=
NETSUITE_TOKEN_ID=
NETSUITE_TOKEN_SECRET=
NETSUITE_API_URL=https://${NETSUITE_ACCOUNT_ID}.suitetalk.api.netsuite.com

# HubSpot (CRM)
HUBSPOT_API_KEY=
HUBSPOT_PORTAL_ID=
HUBSPOT_API_URL=https://api.hubapi.com

# Authorize.Net (Payment Processing)
AUTHORIZE_NET_API_LOGIN_ID=
AUTHORIZE_NET_TRANSACTION_KEY=
AUTHORIZE_NET_SANDBOX=true
AUTHORIZE_NET_API_URL=https://apitest.authorize.net/xml/v1/request.api

# Mustache/Plaid (ACH Payments)
MUSTACHE_API_KEY=
MUSTACHE_SECRET_KEY=
MUSTACHE_ENVIRONMENT=sandbox

# Avalara (Tax Calculation)
AVALARA_ACCOUNT_ID=
AVALARA_LICENSE_KEY=
AVALARA_API_URL=https://sandbox-rest.avatax.com
AVALARA_COMPANY_CODE=

# SendGrid (Email)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@ringer.tel
SENDGRID_FROM_NAME="WARP Platform"

# CORS
API_CORS_ENABLED=true
API_CORS_ORIGINS=https://console.ringer.tel,https://admin.ringer.tel

# Airbrake (Error Tracking)
AIRBRAKE_PROJECT_ID=
AIRBRAKE_PROJECT_KEY=
AIRBRAKE_ENVIRONMENT=${NODE_ENV}