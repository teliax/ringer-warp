{
  "dashboard": {
    "id": null,
    "uid": "rtp-metrics",
    "title": "RTP Media Monitoring",
    "tags": ["rtp", "media", "rtpengine"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 0,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "datasource": "Prometheus",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "id": 1,
        "title": "Active RTP Sessions",
        "type": "graph",
        "targets": [
          {
            "expr": "rtp_sessions_active",
            "legendFormat": "{{instance}} - Active Sessions",
            "refId": "A"
          }
        ]
      },
      {
        "datasource": "Prometheus",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "id": 2,
        "title": "Media Throughput",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(rtp_packets_total[5m])",
            "legendFormat": "{{instance}} - {{direction}} Packets/sec",
            "refId": "A"
          },
          {
            "expr": "rate(rtp_bytes_total[5m]) * 8 / 1000000",
            "legendFormat": "{{instance}} - {{direction}} Mbps",
            "refId": "B"
          }
        ]
      },
      {
        "datasource": "Prometheus",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "id": 3,
        "title": "Packet Loss",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(rtp_packets_lost[5m]) / rate(rtp_packets_total[5m]) * 100",
            "legendFormat": "{{instance}} - Loss %",
            "refId": "A"
          }
        ]
      },
      {
        "datasource": "Prometheus",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "id": 4,
        "title": "Jitter",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(rtp_jitter_milliseconds_bucket[5m]))",
            "legendFormat": "{{instance}} - P99 Jitter (ms)",
            "refId": "A"
          }
        ]
      },
      {
        "datasource": "Prometheus",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        },
        "id": 5,
        "title": "Codec Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (codec) (rtp_sessions_by_codec)",
            "legendFormat": "{{codec}}",
            "refId": "A"
          }
        ]
      },
      {
        "datasource": "Prometheus",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "id": 6,
        "title": "SRTP Sessions",
        "type": "graph",
        "targets": [
          {
            "expr": "rtp_srtp_sessions / rtp_sessions_active * 100",
            "legendFormat": "{{instance}} - SRTP %",
            "refId": "A"
          }
        ]
      },
      {
        "datasource": "Prometheus",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "id": 7,
        "title": "Port Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rtp_ports_used / rtp_ports_available * 100",
            "legendFormat": "{{instance}} - Port Usage %",
            "refId": "A"
          }
        ]
      }
    ]
  }
}