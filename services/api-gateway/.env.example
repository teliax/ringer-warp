# WARP API Gateway Configuration

# Server
PORT=8080
GIN_MODE=debug

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=warp
DATABASE_USER=warp
DATABASE_PASSWORD=your-password-here
DATABASE_SSL_MODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Jasmin Integration
JASMIN_JCLI_HOST=localhost
JASMIN_JCLI_PORT=8990
JASMIN_ADMIN_PASSWORD=your-jasmin-admin-password

# Authentication
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=3600

# External APIs
TELIQUE_API_KEY=your-telique-key
TCR_API_KEY=your-tcr-key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
